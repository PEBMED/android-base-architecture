<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppText" parent="@android:style/Widget.TextView" />

    <style name="AppText.Description">
        <item name="android:layout_marginLeft">@dimen/margin_default</item>
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:maxLines">4</item>
        <item name="android:padding">@dimen/margin_default</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="AppText.Title">
        <item name="android:layout_marginLeft">@dimen/margin_default</item>
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppText.Subtitle">
        <item name="android:layout_marginLeft">@dimen/margin_default</item>
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Subhead</item>
    </style>

    <style name="AppText.Details">
        <item name="android:layout_marginLeft">@dimen/margin_default</item>
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:drawablePadding">@dimen/margin_medium</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
    </style>

</resources>
